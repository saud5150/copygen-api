# Django
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.railway.app,localhost

# Database (Railway auto-injects DATABASE_URL)
DATABASE_URL=postgres://user:password@host:5432/copygen

# Groq (free tier â€” get key at https://console.groq.com)
GROQ_API_KEY=gsk_your-key-here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MAX_TOKENS=2048
GROQ_TEMPERATURE=0.8

# Rate Limiting
FREE_TIER_RATE_LIMIT=10/day

# CORS
CORS_ALLOWED_ORIGINS=https://your-frontend.com

# Logging
LOG_LEVEL=INFO
